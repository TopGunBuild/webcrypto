{
  "git": {
    "commitMessage": "chore: Release v${version}",
    "tagName": "v${version}",
    "requireCommits": true,
    "requireCleanWorkingDir": true
  },
  "github": {
    "release": true,
    "draft": true,
    "releaseName": "v${version}",
    "commitArgs": [
      "-S"
    ],
    "tagArgs": [
      "-s"
    ],
    "assets": [
      "tar/*.tgz"
    ]
  },
  "npm": {
    "publish": true
  },
  "hooks": {
    "before:init": [
      "pnpm lint"
    ],
    "after:bump": "pnpm build && pnpm tarball",
    "after:release": "echo Successfully created a release v${version} for ${repo.repository}."
  }
}
